@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
<div class="jumbotron w-100">
    <h1 class="display-4">The Learning Center</h1>
    <p class="lead">The place for technology classes.</p>
    <hr class="my-4">
    <button class="btn btn-primary" type="button">Learn More<i class="fas fa-angle-double-right pl-2"></i></button>
</div>
</div>
<div class="row py-4 justify-content-between">
    <div class="">
        <a class="btn btn-link home-buttons pl-0 pb-0" asp-action="classlist">Class List</a>
