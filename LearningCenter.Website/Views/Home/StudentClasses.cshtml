@model List<LearningCenter.Website.Models.ClassViewModel>
@{
    ViewData["Title"] = "Student Class List";
}

<div class="row border-bottom py-3 mb-3">
    <div class="col">
        <h3>Student Classes</h3>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        @if (Model.Count == 0)
        {
            <h6>Not enrolled in any classes.</h6>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="col-2">Name</th>
                        <th class="col-4">Description</th>
                        <th class="col-2">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var clas in Model)
                        {
                            <tr>
                                <td class="col-2">@clas.Name</td>
                                <td class="col-4">@clas.Description</td>
                                <td class="col-2">@clas.Price</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }

    </div>
</div>